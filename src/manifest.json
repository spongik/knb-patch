{
	"manifest_version": 2,
    "name": "Kanobu Patch",
    "description": "by spongik and orels1",
    "version": "0.3",
    "permissions": [
        "tabs",
		"http://kanobu.ru/*"
    ],
    "web_accessible_resources": [
		"bg.jpg"
	],
	"background": {
		"scripts": ["background.js"]
	},
    "content_scripts": [
		{
		  "matches": ["http://kanobu.ru/*"],
		  "run_at": "document_start",
		  "js": ["jquery-1.9.1.min.js", "knbPatch.js"],
		  "css": ["knbPatch.css"]
		}
    ]
}